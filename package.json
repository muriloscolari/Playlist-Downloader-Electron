{
  "name": "yt-dlp-node",
  "version": "1.0.0",
  "description": "YouTube Playlist Downloader - Electron App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux --x64",
    "build:windows": "USE_SYSTEM_FPM=true electron-builder --windows --x64"
  },
  "keywords": [
    "youtube",
    "downloader",
    "mp3",
    "electron"
  ],
  "author": {
    "name": "Murilo",
    "email": "murilovazscolari6@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.ytdownloader.app",
    "productName": "YouTube Downloader",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo"
    },
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "${productName}-${version}-portable.exe",
      "signAndEditExecutable": false
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": []
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "node-id3": "^0.2.9",
    "p-limit": "^7.2.0",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  }
}